<Window x:Class="Snake_the_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake_the_game"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500"  ResizeMode="NoResize" >
    <Window.Background>
        <ImageBrush ImageSource="{Binding BackgroundImagePath}" Stretch="Fill" Opacity="0.5"/>
    </Window.Background>

    <Grid>
        <ContentControl Content="{Binding CurrentPageViewModel}" Grid.ColumnSpan="2" Margin="0,0,-0.4,0.4"/>
    </Grid>



    <Window.InputBindings>
        <KeyBinding 
            Key="Up"
            Command="{Binding UpPress}"/>
        <KeyBinding 
            Key="Down"
            Command="{Binding DownPress}"/>
        <KeyBinding 
            Key="Left"
            Command="{Binding LeftPress}"/>
        <KeyBinding 
            Key="Right"
            Command="{Binding RightPress}"/>
    </Window.InputBindings>

</Window>
